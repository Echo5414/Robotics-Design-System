{
  "$schema": "https://design-tokens.org/schemas/v1.0.0/design-tokens.schema.json",
  "$description": "Components tokens",
  "button": {
    "primary": {
      "background": {
        "$type": "color",
        "$value": {
          "value": "{color.brand.primary-600}"
        },
        "$description": "Primary button background",
        "$extensions": {
          "opensystem": {
            "isAlias": true,
            "aliasPath": "color.brand.primary-600"
          }
        }
      },
      "background-hover": {
        "$type": "color",
        "$value": {
